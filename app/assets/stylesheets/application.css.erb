@font-face {
  font-family: 'Icons';
  src: url('<%= asset_path("icons.eot") %>');
  src: url("<%= asset_path('icons.eot?') %>") format('embedded-opentype'), url("<%= asset_path('icons.woff2') %>") format('woff'), url("<%= asset_path('icons.woff') %>") format('woff'), url("<%= asset_path('icons.ttf') %>") format('truetype'), url("<%= asset_path('Zicons.svg') %>") format('svg');
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-decoration: inherit;
  text-transform: none;
}

#map-container {
	text-align: center;
	margin: auto;
	height: auto;
	border-color: #fff;
	border-style: solid;
	box-shadow: 2px 2px 10px #B1B1B1;
	border-width: 7px;
}

#map-canvas {
	height: 484px;
	width: 100%;
}

html { height:100%; }
body { height:100%; top:0; bottom:0; right:0; left:0; }

.ui .message{
}

.ui .button{
	text-transform: capitalize;
}

nav {
	background-color: #2262A2 !important;
	height: 65px;
	padding-left: 15rem !important;
	padding-right: 15rem !important;
}

.notice-bar {
	text-align: center !important;
	margin-top: 10px !important;
	z-index: 9999999;
}

.no-margin {
	margin: 0 !important;
}

.fixed {
	position: fixed;
}

.item {
	font-size: 18px !important;
}

.ui .logo {
	background-color: white;
	height: 65px;
	width: 174px;
	padding: 0;
}

.zero-pad {
	padding:0 !important;
}	

html {
	position: relative;
	min-height: 100%;
}

body {
	background-color: #FFF !important;
	min-height: 100%;
}

.nav-holder {
	height: 75px;
	padding: 0 !important;
	margin: auto !important;
	display: table;
}

.nav-elem {
	height: 75px;
	vertical-align: middle;
	display: table-cell !important;
}

.nav-link {
	height: 75px;
	vertical-align: middle;
	display: table-cell !important;
}

.nav-img {
	display: table-cell !important;
	vertical-align: middle;
}

.nav-img:before {
	content: none !important;
}

.navbar {
	height: 75px;
	border-radius: 0 !important;
	border-bottom-style: solid !important;
	border-bottom-width: 10px !important;
	border-bottom-color: #7AADDF !important;
}

.modal-styles {
	text-align:left;
	border-style:solid;
	padding-left:50px;
	padding-right:50px;
	background-color:#fff;
}

td {
	padding-right: 10px !important;
}

.page-title {
	margin-top: 30px;
	margin-bottom: 30px;
	font-size: 3rem;
}

.strong {
	font-weight: bold !important;
}

h1:first-child, h1:last-child, 
h2:first-child, h2:last-child, 
h3:first-child, h3:last-child,
h4:first-child, h4:last-child,
h5:first-child, h5:last-child,
p:first-child, p:last-child {
  margin-top: 30px;
  margin-bottom: 30px;
}

#filter-tab {
	display: block !important;
}

.filter-item {
	display: inline-block !important;
}

.no-top-margin {
	margin-top: 0px !important;
}

.footer {
	position: absolute;
	color: white;
	padding-top: 25px !important;
	padding-left: 20rem !important;
	padding-right: 20rem !important;
	width: 100%;
	height: 250px;
	background-color:#2262A2 !important;
	bottom: 0;
	left: 0;
	border-top-style: solid !important;
	border-top-width: 10px !important;
	border-top-color: #7AADDF !important;
}

.footer a {
	color: white;
}

.footer a:hover {
	color: #7AADDF;
}

.buffer {
	height: 150px;
}

#wrapper {
	min-height: 100%;
	position: relative;
}

.main-content {
	padding-bottom: 250px !important;
}

.profile-pic {
	height: 50px;
	width: 50px;
	border-width: 2px;
	border-radius: 50px;
	border-style: solid;
	border-color: #7AADDF;
	display: inline-block !important;
}

.right-align {
	text-align: right !important;
}

.paragraph {
	width: 700px;
}