@font-face {
  font-family: 'Icons';
  src: url('<%= asset_path("icons.eot") %>');
  src: url("<%= asset_path('icons.eot?') %>") format('embedded-opentype'), url("<%= asset_path('icons.woff2') %>") format('woff'), url("<%= asset_path('icons.woff') %>") format('woff'), url("<%= asset_path('icons.ttf') %>") format('truetype'), url("<%= asset_path('Zicons.svg') %>") format('svg');
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-decoration: inherit;
  text-transform: none;
}

#map-container {
	text-align: center;
	margin: auto;
	height: auto;
	border-color: #fff;
	border-style: solid;
	box-shadow: 2px 2px 10px #B1B1B1;
	border-width: 7px;
}

#map-canvas {
	height: 484px;
	width: 100%;
}

body{
	font-family: 'Open Sans', sans-serif;
}

html { height:100%; }
body { height:100%; top:0; bottom:0; right:0; left:0; }

.ui .message{
}

.ui .button{
	text-transform: capitalize;
}

nav {
	background-color:#003366 !important;
	height: 65px;
	border-radius: 0 !important;
}

.notice-bar {
	text-align: center !important;
	margin-top: 10px !important;
}

.nomargin {
	margin: 0;
	padding: 0;
}

.fixed {
	position: fixed;
}

.item {
	font-size: 18px !important;
}

.ui .logo {
	height:65px;
	width:174px;
	padding:0;
}

.zero-pad {
	padding:0 !important;
}	

body {
	background-color: #FFF !important;
}

.nav-holder {
	height: 65px;
	padding: 0 !important;
	margin: auto !important;
}

.nav-elem {
	height: inherit;
	vertical-align: middle;
	display: table !important;
}

.nav-link {
	display: table-cell !important;
	vertical-align: middle;
}

.modal-styles {
	text-align:left;
	border-style:solid;
	padding-left:50px;
	padding-right:50px;
	background-color:#fff;
}

td {
	padding-right: 10px !important;
}

.page-title {
	margin-top: 30px;
	margin-bottom: 30px;
	font-size: 3rem;
}