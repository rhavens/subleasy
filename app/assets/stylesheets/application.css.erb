	padding-bottom: .5rem;
}

div.ui.primary.button {
  /*display: inline-block;*/
  /*vertical-align: middle;*/
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
  /*box-shadow: 0 0 1px rgba(0, 0, 0, 0);*/
