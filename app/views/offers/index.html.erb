	var newColorFunc = function(val, min, max) {
		var relativeValue = (val - min)/(max - min + 0.001);
		console.log(val, relativeValue);
		if (relativeValue < .25) {
			return '00ff00';
		}
		else if (relativeValue < .5) {
			return 'ffff00';
		}
		else if (relativeValue < .75) {
			return 'ffa500';
		}
		else {
			return 'ff0000';
		}
		
	}

	var hsv2rgb = function(val, min, max) {
	  // adapted from http://schinckel.net/2012/01/10/hsv-to-rgb-in-javascript/
	  var h = Math.floor(((max - min) - (val - min)) * 120 / (max - min + 0.001));
      var s = Math.abs((val - min) - ((max - min)/2))/((max - min + 0.001)/2);
      var v = 1;
	  var rgb, i, data = [];
	  if (s === 0) {
	    rgb = [v,v,v];
	  } else {
	    h = h / 60;
	    i = Math.floor(h);
	    data = [v*(1-s), v*(1-s*(h-i)), v*(1-s*(1-(h-i)))];
	    switch(i) {
	      case 0:
	        rgb = [v, data[2], data[0]];
	        break;
	      case 1:
	        rgb = [data[1], v, data[0]];
	        break;
	      case 2:
	        rgb = [data[0], v, data[2]];
	        break;
	      case 3:
	        rgb = [data[0], data[1], v];
	        break;
	      case 4:
	        rgb = [data[2], data[0], v];
	        break;
	      default:
	        rgb = [v, data[0], data[1]];
	        break;
	    }
	  }
	  return rgb.map(function(x){
	    return ('0' + Math.round(x*255).toString(16)).slice(-2);
	  }).join('');
	};

