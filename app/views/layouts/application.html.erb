<!DOCTYPE html>
<html>
<head>
  <title>Subleasy</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
</head>
<body>
    <!-- NAVBAR -->
    <div class="center">
    <div class="ui page grid fixed center nav-holder">
    <nav class="ui inverted menu navbar">
        <div class="left menu nav-elem">
        	<div style="background-color:#FFF;">
            <%= link_to (image_tag "SubleasyLogo.png", :class=>"ui logo"), :home, :class=>"item zero-pad" %>
        	</div>
        </div>
        <div class="right menu nav-elem">
            <%= link_to '<i class="icon shop"></i>Sublets'.html_safe, :offers, 'data-no-turbolink' => true, :class=>"item" %>
            <%= link_to '<i class="icon home nav-elem"></i>New Offer'.html_safe, new_offer_path, :class=>"item" %>
            <% if user_signed_in? %>
            	<%= link_to '<i class="icon setting nav-elem"></i>My Offers'.html_safe, current_user, :class=>"item" %>
            <% end %>
            <div class="item nav-elem" style="padding-bottom:0">
        		<% if user_signed_in? %>
        		  <strong><%= current_user.name %></strong> <img height=25 src='<%= "http://graph.facebook.com/" + current_user.uid + "/picture" %>'></img> 
        		  <%= link_to 'Account', edit_user_registration_path, :class => 'navbar-link' %> |
        		  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
        		<% else %>
        		  <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
        		<% end %>
        	</div>
        </div>
    </nav>

    <!-- MESSAGE SUPPORT -->
    <div class="ui page grid notice-bar">
		<% flash.each do |key, value| %>
            <% if value.respond_to?('each') %>
				<div class="ui item <%= key %> message alert alert-danger">
					<% value.each do |element| %>
						<p class="item"><%= element %>.</p>
					<% end %>
				</div>
            <% else %>
                <% if (key == "notice") %>
                    <div class="ui item success message alert alert-danger">
                        <p class="item"><%= value %></p>
                    </div>
                <% end %>
                <% if (key == "alert" || key == "error") %>
                    <div class="ui item error message alert alert-danger">
                        <p class="item"><%= value %></p>
                    </div>
                <% end %>
		     <% end %>
	    <% end %>
	</div>
</div>
</div>
    <!-- YIELD -->
	<div class="ui page grid" style="margin-top: 65px;">
		<%= yield %>
		<div class="footer" style="height:150px;">
		</div>
	</div>
</body>
</html>
